{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint --continue",
    "lint:fix": "turbo lint:fix --continue",
    "lint:check": "turbo lint -- --max-warnings 0",
    "storybook": "turbo storybook",
    "storybook:build": "turbo storybook:build",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=22"
  }
}
